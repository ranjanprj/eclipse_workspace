<mvc:View controllerName="com.slb.cus.operationalapproval.controller.Master" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page id="page" title="{masterView>/title}" navButtonPress="onNavBack" showNavButton="true">
		<subHeader>
			<Bar id="headerBar">
				<contentMiddle>
					<SearchField id="searchField" showRefreshButton="{= !${device>/support/touch} }" tooltip="{i18n>masterSearchTooltip}" width="100%"
						search="onSearch"></SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<PullToRefresh id="pullToRefresh" visible="{device>/support/touch}" refresh="onRefresh"/>
			<!-- For client side filtering add this to the items attribute:  parameters: {operationMode: 'Client'}}" -->
			<List id="list"
				items="{ path: '/SalesOrderHeaderSet', sorter: { path: 'OrderNo', descending: false }, groupHeaderFactory: '.createGroupHeader' }"
				busyIndicatorDelay="{masterView>/delay}" noDataText="{masterView>/noDataText}"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}" growing="true" growingThreshold="10" growingScrollToLoad="true"
				updateFinished="onUpdateFinished" selectionChange="onSelectionChange">
				<infoToolbar>
					<Toolbar active="true" id="filterBar" visible="{masterView>/isFilterBarVisible}" press="onOpenViewSettings">
						<Title id="filterBarLabel" text="{masterView>/filterBarLabel}" tooltip="{masterView>/filterBarLabel}"/>
					</Toolbar>
				</infoToolbar>
				<items>
					<ObjectListItem type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}" press="onSelectionChange" title="{OrderNo}"
						number="{ path: 'NetValue', formatter: '.formatter.currencyValue' }" numberUnit="{OrderCurr}">
						<attributes>
							<ObjectAttribute text="{PoNumber}"/>
							<ObjectAttribute text="{ path : 'CreatedOn', formatter: '.formatter.date'}"/>
						</attributes>
						<!-- <secondStatus>
						<ObjectStatus
							text="{Status}"
							state="{
								path: 'Status',
								formatter: '.formatter.statusState'
							}" />
						</secondStatus> -->
					</ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<OverflowToolbar id="footerbar">
				<ToolbarSpacer/>
				<!--<Select id="sort-select" type="IconOnly" icon="sap-icon://sort" autoAdjustWidth="true" selectedKey="{masterView>/sortBy}" change="onSort">
					<core:Item id="masterSort1" key="OrderNo" text="{i18n>masterSort1}"/>
					<core:Item id="masterSort2" key="Netwr" text="{i18n>masterSort2}"/>
				</Select>-->
				<OverflowToolbarButton text="{i18n>masterListFilterButtonOverflowText}" id="filter-button" icon="sap-icon://filter"
					press="onOpenViewSettings"/>
				<!--<Select id="group-select" type="IconOnly" icon="sap-icon://group-2" autoAdjustWidth="true" selectedKey="{masterView>/groupBy}"
					change="onGroup">
					<core:Item id="masterGroupNone" key="None" text="{i18n>masterGroupNone}"/>
					<core:Item id="masterGroup1" key="Netwr" text="{i18n>masterGroup1}"/>
				</Select>-->
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>